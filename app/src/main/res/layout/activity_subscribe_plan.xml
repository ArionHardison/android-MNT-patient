<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SubscribePlanActivity">


    <LinearLayout
        android:id="@+id/subscribe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:id="@+id/item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="#fafafa"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fafafa"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fafafa"
                    android:padding="@dimen/_12sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_12sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/light_grey"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <FrameLayout
                            android:layout_width="@dimen/_85sdp"
                            android:layout_height="@dimen/_65sdp">

                            <ImageView
                                android:id="@+id/dish_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/restaurant"
                                android:scaleType="fitCenter"
                                android:src="@drawable/logo_app" />

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/restaurant_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_semibold"
                                android:maxLines="1"
                                android:text="Funkies"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="@dimen/text_small" />

                            <TextView
                                android:id="@+id/halal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_semibold"
                                android:maxLines="1"
                                android:padding="@dimen/_1sdp"
                                android:text="@string/halal"
                                android:textColor="@color/colorGray"
                                android:textSize="@dimen/text_small" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginTop="10dp"
                                android:gravity="bottom"
                                android:orientation="vertical">



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:contentDescription="@string/app_name"
                                            android:padding="@dimen/_4sdp"
                                            android:src="@drawable/ic_star_rating" />

                                        <TextView
                                            android:id="@+id/rating"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:fontFamily="@font/nunito_bold"
                                            android:text="5"
                                            android:textColor="@color/dark_grey"
                                            android:textSize="@dimen/text_small" />
                                    </LinearLayout>



                                    <TextView
                                        android:id="@+id/price"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/nunito_bold"
                                        android:gravity="end"
                                        android:maxLines="1"
                                        android:paddingStart="0dp"
                                        android:paddingEnd="0dp"
                                        android:text="$200 for two"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorSecondaryText"
                                        android:textSize="@dimen/text_small"
                                        android:visibility="gone" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_11sdp"
                        android:text="@string/healthy_foods"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_11sdp"
                        android:padding="@dimen/_2sdp"
                        android:text="@string/planned_diet"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_11sdp"
                        android:text="@string/healthy_foods"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:padding="@dimen/_2sdp"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@string/subscribe_for"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioGroup
                android:id="@+id/choose_subscribe_plan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:orientation="vertical">


                <RadioButton
                    android:id="@+id/threeMonthsPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="30dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_semibold"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="@string/_3_months_plan"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_medium" />

                <RadioButton
                    android:id="@+id/yearlyPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="30dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_semibold"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="@string/yearly_plan"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_medium" />

            </RadioGroup>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="@dimen/text_medium"
                    android:text="$34"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="@dimen/text_medium"
                    android:text="$34"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_subscribtion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar" />
    </LinearLayout>
    <Button
        android:id="@+id/subscribe_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_corner_bg_theme"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/subscribe_now"
        android:layout_margin="@dimen/_16sdp"
        android:textAllCaps="false"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/_12sdp" />
</RelativeLayout>