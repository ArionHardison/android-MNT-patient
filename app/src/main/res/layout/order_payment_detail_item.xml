<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_food_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_regular"
            android:text="@string/item_total"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/item_total_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_regular"
            android:gravity="end"
            android:text="$0"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:id="@+id/incredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_regular"
            android:text="@string/incredient_amount"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/item_incredient_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_regular"
            android:gravity="end"
            android:text="$0"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:id="@+id/item_tax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/service_tax"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/item_tax_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_bold"
            android:gravity="end"
            android:text="$0"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/service_tax"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/service_tax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_bold"
            android:gravity="end"
            android:text="$30"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/delivery_charges"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/delivery_charges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_bold"
            android:gravity="end"
            android:text="$20"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/promocode_amount"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/promocode_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_bold"
            android:gravity="end"
            android:text="$20"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/discount"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/discount_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_bold"
            android:gravity="end"
            android:text="$20"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/wallet_detection"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/wallet_amount_detection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_bold"
            android:gravity="end"
            android:text="0"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="26dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="end"
            android:text="@string/total"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/text_small_large" />

        <TextView
            android:id="@+id/total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="end"
            android:text="$0"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/text_small_large" />
    </LinearLayout>
</LinearLayout>