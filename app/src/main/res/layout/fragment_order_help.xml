<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.oyola.app.fragments.OrderHelpFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/help_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin_half" />

    <LinearLayout
        android:id="@+id/other_help_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1sdp"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">


        <TextView
            android:id="@+id/reason_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin_half"
            android:fontFamily="@font/nunito_regular"
            android:text="@string/are_you_facing_help"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dispute"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginRight="@dimen/activity_vertical_margin_half"
                android:layout_weight="1"
                android:background="@drawable/button_border_theme_color"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/dispute"
                android:textColor="@color/theme"
                android:visibility="gone" />

            <Button
                android:id="@+id/chat_us"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@drawable/button_border_theme_color"
                android:fontFamily="@font/nunito_bold"
                android:text="Chat us"
                android:textColor="@color/theme"
                android:visibility="gone" />

            <Button
                android:id="@+id/email_us"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/activity_vertical_margin_half"
                android:layout_weight="1"
                android:background="@drawable/button_border_theme_color"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/call_us"
                android:textColor="@color/theme" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
