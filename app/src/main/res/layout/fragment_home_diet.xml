<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    app:stickyHeader="@+id/title"
    tools:context="com.dietmanager.app.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--    Animation line  -->
        <ImageView
            android:id="@+id/animation_line_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/avd_line" />

        <LinearLayout
            android:id="@+id/root_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--    Imprssive Dish-->

            <LinearLayout
                android:id="@+id/impressive_dishes_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/offer_title_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:maxLines="1"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/lets_impress_you_with_our_dishes"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/_11sdp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/impressive_dishes_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal" />

            </LinearLayout>



            <!--Dietitian Layout-->
            <TextView
                android:id="@+id/dummy_navigate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="@dimen/_8sdp"
                android:text="Dummy view. navigate to next screen"
                android:textSize="@dimen/_11sdp"/>

            <LinearLayout
                android:id="@+id/dietitian_for_you_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dietitian_count_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:padding="@dimen/_8sdp"
                        android:text="@string/dietitian"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_11sdp"/>

                    <Spinner
                        android:id="@+id/catagoery_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/bg_spinner"
                        android:gravity="end|center_vertical"
                        android:maxLines="1"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_tiny"
                        android:visibility="invisible" />
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dietitians_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_60sdp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/dietitian_list_item"
                    android:orientation="vertical" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/error_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginTop="@dimen/_70sdp"
                    android:padding="8dp"
                    android:src="@drawable/no_data_found" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/no_dietitian_found"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_small"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:gravity="center"
                    android:maxLines="3"
                    android:text="@string/no_dietitian_found_in_your_location"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="14sp"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView><!--</com.amar.library.ui.StickyScrollView>-->




